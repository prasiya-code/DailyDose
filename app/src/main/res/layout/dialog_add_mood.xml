<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp"
        android:layout_margin="16dp"
        app:cardBackgroundColor="@color/card_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/habit_personal_gradient"
                android:padding="20dp"
                android:layout_marginBottom="24dp"
                android:elevation="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MOOD JOURNAL"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:letterSpacing="0.05"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Track your emotions today"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:alpha="0.9" />

            </LinearLayout>

            <!-- Mood Selection Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                app:strokeWidth="0dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:background="@drawable/history_complete_gradient">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SELECT YOUR MOOD"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:letterSpacing="0.1"
                        android:layout_marginBottom="12dp" />

                    <Spinner
                        android:id="@+id/mood_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:background="@drawable/rounded_edittext_background"
                        android:padding="14dp"
                        android:spinnerMode="dropdown" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Note Input Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                app:strokeWidth="0dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:background="@drawable/habit_other_gradient">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ADD A NOTE"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:letterSpacing="0.1"
                        android:layout_marginBottom="12dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="What's on your mind? (optional)"
                        app:boxBackgroundMode="filled"
                        app:boxBackgroundColor="@color/white"
                        app:boxStrokeColor="@color/white"
                        app:hintTextColor="@color/text_secondary"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/mood_note_input"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textMultiLine"
                            android:maxLines="3"
                            android:minLines="2"
                            android:textColor="@color/text_primary"
                            android:textSize="15sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Energy & Stress Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                app:strokeWidth="0dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:background="@drawable/history_partial_gradient">

                    <!-- Energy Level -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@color/white">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginBottom="12dp">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="ENERGY LEVEL"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/success_color"
                                    android:letterSpacing="0.1" />

                                <TextView
                                    android:id="@+id/energy_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="5/10"
                                    android:textSize="24sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/white"
                                    android:paddingHorizontal="20dp"
                                    android:paddingVertical="8dp"
                                    android:background="@drawable/habit_health_gradient" />

                            </LinearLayout>

                            <SeekBar
                                android:id="@+id/energy_seekbar"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:max="10"
                                android:progress="5"
                                android:progressTint="@color/success_color"
                                android:thumbTint="@color/success_color"
                                android:minHeight="8dp" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <!-- Stress Level -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@color/white">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginBottom="12dp">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="STRESS LEVEL"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/accent_color"
                                    android:letterSpacing="0.1" />

                                <TextView
                                    android:id="@+id/stress_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="5/10"
                                    android:textSize="24sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/white"
                                    android:paddingHorizontal="20dp"
                                    android:paddingVertical="8dp"
                                    android:background="@drawable/habit_fitness_gradient" />

                            </LinearLayout>

                            <SeekBar
                                android:id="@+id/stress_seekbar"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:max="10"
                                android:progress="5"
                                android:progressTint="@color/accent_color"
                                android:thumbTint="@color/accent_color"
                                android:minHeight="8dp" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/cancel_button"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:text="CANCEL"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.05"
                    android:textColor="@color/text_primary"
                    app:cornerRadius="16dp"
                    android:layout_marginEnd="8dp"
                    app:strokeWidth="2dp"
                    app:strokeColor="@color/text_secondary"
                    style="@style/Widget.Material3.Button.OutlinedButton" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/save_button"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:text="SAVE MOOD"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.05"
                    android:textColor="@color/white"
                    app:cornerRadius="16dp"
                    android:layout_marginStart="8dp"
                    app:backgroundTint="@color/secondary_color" />

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</ScrollView>
